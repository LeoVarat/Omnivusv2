@model SignUpModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="container">
        <div id="sign-up">
                <div class="title mb-5">
                    <h1>@ViewData["Title"]</h1>
                    <p> Please fill in the following information, so that we can prepare an account for you!</p>
                    <p> Do you already have an account? Oh, you silly goose... <a asp-action="SignIn"> sign in here! </a> </p>
                </div>
                <div class="d-flex justify-content-center">
                   <form asp-action="SignUp" asp-route-returnURL="@Model.ReturnUrl" class="col-8">
                       <div class="row g-3">
                        <div class="col-6 mb-2">
                            <input asp-for="FirstName" typeof="text" class="form-control" placeholder="Type in your first name here" />
                            <small><span asp-validation-for="FirstName" class="text-danger"></span></small>
                        </div>
                        <div class="col-6 mb-2">
                            <input asp-for="LastName" typeof="text" class="form-control" placeholder="Type in your last name here" />
                            <small><span asp-validation-for="LastName" class="text-danger"></span></small>
                        </div>
                        <div class="mb-2">
                            <input asp-for="Adress" typeof="text" class="form-control" placeholder="Type in your adress here, eg. Adress-street 19A" />
                            <small><span asp-validation-for="Adress" class="text-danger"></span></small>
                        </div>
                        <div class="col-6 mb-2">
                            <input asp-for="PostalCode" typeof="text" class="form-control" placeholder="Type in your postal code here" />
                            <small><span asp-validation-for="PostalCode" class="text-danger"></span></small>
                        </div>
                        <div class="col-6 mb-2">
                            <input asp-for="City" typeof="text" class="form-control" placeholder="Type in your city here" />
                            <small><span asp-validation-for="City" class="text-danger"></span></small>
                        </div>
                        <div class="mb-2">
                            <input asp-for="Email" typeof="text" class="form-control" placeholder="Type in your cool email here, eg. really-fun-user@cool-doman.com " />
                            <small><span asp-validation-for="Email" class="text-danger"></span></small>
                        </div>
                        <div class="col-6 mb-2">
                            <input asp-for="Password" typeof="password" class="form-control" placeholder="Type in your super-safe-password here" />
                            <small><span asp-validation-for="Password"  class="text-danger"></span></small>
                        </div>
                        <div class="col-6 mb-2">
                            <input asp-for="ConfirmPassword" typeof="password" class="form-control" placeholder="Confirm your super-safe-password here" />
                            <small><span asp-validation-for="ConfirmPassword"  class="text-danger"></span></small>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-4">
                            <button type="submit" class="btn btn-main">@ViewData["Title"]</button>
                         </div>
                       </div>

                 </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}